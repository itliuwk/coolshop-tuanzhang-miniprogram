.btn {
  width           : 80%;
  margin          : auto;
  margin-top      : 100px;
  padding         : 20rpx 0;
  background-color: red;
  color           : #fff;
  border-radius   : 20rpx;
  text-align      : center;
}


.operation {
  width   : 100%;
  position: fixed;
  bottom  : 40rpx;
  z-index : 999;
  display : flex;
  height  : 76rpx;
}

.operation .weui-btn {
  flex       : 1;
  line-height: 70rpx;
  margin     : 0 40rpx;
  font-size  : 30rpx;
  background : transparent;
  color      : rgba(90, 200, 250, 1);
  border     : 1px solid rgba(90, 200, 250, 1);
  z-index    : 999;
}

.operation .weui-btn:nth-child(1) {
  background: #007aff;
  border    : none;
  color     : #fff;
  z-index   : 999;
}